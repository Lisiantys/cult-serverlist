      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.64.0/theme/monokai.min.css"
    />
    <link rel="stylesheet" href="./css/codemirror.min.css" /> -->
    <link
      rel="stylesheet"
      href="./css/themes/default_light.css"
      id="themeStylesheet"
    />
    <style id="customThemeStylesheet"></style>

    <!-- Site JS Libraries -->

    <% if (site.mode === "live") { %> <% } %> <% if (site.analytics.enabled) {
    %> <%- include("./index/analytics") %> <% } %>

    <!-- Baked-in Site Config -->
    <script type="text/javascript">
      window.siteConfig = <%- JSON.stringify(site) %>;
    </script>
  </head>
  <body>
    <%- include("./index/settings") %> <% if (site.mode === "live") { %> <%-
    include("./index/spectatorModal") %> <% } %> <%-
    include("./index/shareGameModal") %> <%- include("./index/customThemeModal")
    %> <%- include("./index/survivalSpectatorModal") %>
    <div class="container" data-nosnippet>
      <!-- Navbar -->
      <nav class="navbar" id="navbar">
        <div class="px-0" style="display: flex">
          <div class="d-flex flex-column">
            <h1 class="navbar-brand">UncrownedList V1.7.5</h1>
            <h2 class="text-end pe-3 adonys">BY ADONYS</h2>
          </div>
          <a
            class="me-2 nav-link nav-icon bi bi-info-circle-fill"
            id="navbarSettingsButton"
            style="margin-top: 3%"
          ></a>
        </div>
      </nav>
      <div class="row">
        <!-- View Options -->
        <div class="col-sm-2 pt-3" id="viewOptions">
          <!-- Region Selection -->
          <div class="region-mode-wrapper">
            <div>
              <h5>Regions :</h5>
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="radio"
                  name="region"
                  id="America"
                  checked
                />
                <label class="form-check-label" for="America">America</label>
                <i class="bi bi-person-fill"></i>
                <span id="countAmerica">69</span>
              </div>
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="radio"
                  name="region"
                  id="Europe"
                />
                <label class="form-check-label" for="Europe">Europe</label>
                <i class="bi bi-person-fill"></i>
                <span id="countEurope">69</span>
              </div>
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="radio"
                  name="region"
                  id="Asia"
                />
                <label class="form-check-label" for="Asia">Asia</label>
                <i class="bi bi-person-fill"></i>
                <span id="countAsia">69</span>
              </div>
              <div class="form-check">
                <input
                  class="form-check-input d-none"
                  type="radio"
                  name="region"
                  id="World"
                />
                <label class="form-check-label" for="World"><b>Total</b></label>
                <i class="bi bi-person-fill"></i>
                <span id="countTotal">420</span>
              </div>
            </div>

            <div>
              <!-- Mode Selection -->
              <h5 class="mt-3">Modes :</h5>
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  value=""
                  id="teamMode"
                  checked
                />
                <label class="form-check-label" for="teamMode"
                  ><i class="bi bi-people-fill"></i> Team Mode</label
                >
              </div>
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  value=""
                  id="survivalMode"
                  checked
                />
                <label class="form-check-label" for="survivalMode"
                  ><i class="bi bi-bullseye"></i> Survival Mode</label
                >
              </div>
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  value=""
                  id="deathmatchMode"
                  checked
                />
                <label class="form-check-label" for="deathmatchMode"
                  ><i class="bi bi-trophy-fill"></i> Deathmatch</label
                >
              </div>
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  value=""
                  id="moddingMode"
                  checked
                />
                <label class="form-check-label" for="moddingMode"
                  ><i class="bi bi-code-slash"></i> Modded</label
                >
              </div>
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  value=""
                  id="invasionMode"
                />
                <label class="form-check-label" for="invasionMode"
                  ><i class="bi bi-border"></i> Invasion</label
                >
              </div>
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  value=""
                  id="customMode"
                />
                <label class="form-check-label" for="customMode"
                  ><i class="bi bi-wrench"></i> Custom</label
                >
              </div>
            </div>
          </div>
          <!-- Notification Option -->
          <h5 class="mt-3">Options :</h5>
          <div class="form-check">
            <input
              class="form-check-input"
              type="checkbox"
              value=""
              id="newServerAlert"
            />
            <label class="form-check-label" for="newServerAlert"
              ><i class="bi bi-bell-fill"></i> New Server Alert</label
            >
          </div>
          <br />
        </div>
        <!-- System List -->
        <div class="col-sm-5" id="systemsListContainer">
          <div class="system-list-item mb-3" id="shareCustomGameCard">
            <div class="card-body text-center user-select-none text-white">
              <i class="bi bi-plus"></i> Share custom game
            </div>
          </div>
          <div id="systemsList"></div>
        </div>
        <!-- System Info -->
        <div class="col-sm-5" id="systemReport">
          <div class="system-report-card">
            <div class="card-body">
              <div class="d-flex gap-2 text-center">
                <h3 id="SR_Name">Trappist-1</h3>
                <h3>-</h3>
                <h3 id="SR_Time">69 min</h3>
                <br />
              </div>
              <div id="SR_StaticAPIRequired" class="d-flex flex-column">
                <div>
                  <b class="float-start">ECP Count</b
                  ><span class="float-end" id="SR_ECPCount">70</span><br />
                </div>
                <div id="SR_TeamModeRequired">
                  <b class="float-start">Team Scores</b
                  ><span class="float-end" id="SR_TotalTeamScores">70</span
                  ><br />
                </div>

                <div
                  id="SR_TeamsSection"
                  style="display: none; padding: 10px 0"
                >
                  <b class="float-start">Teams:</b>
                  <br />
                  <span class="float-start" id="SR_TeamList">70</span>
                  <br />
                </div>

                <div>
                  <b class="float-start pb-2">Players : </b>
                  <span class="float-end" id="SR_PlayerCount"> 70</span>
                  <span class="float-end" id="SR_PlayerList">70</span>
                  <br />
                </div>
              </div>
              <div class="btn-group w-100 mt-3">
                <button class="btn btn-outline-light" id="systemCopyLink">
                  <i class="bi bi-clipboard" id="clipboard"></i>
                </button>
                <a
                  class="w-90 btn btn-outline-light rounded-end"
                  id="systemReportLink"
                  >Join Game</a
                >
                <button class="btn btn-outline-light" id="systemSpectateButton">
                  <i class="bi bi-eye-fill"></i>
                </button>
              </div>
            </div>
          </div>
          <button
            class="btn btn-outline-light"
            id="systemSurvivalSpectateButton"
            style="display: block"
          >
            <i class="bi bi-eye-fill"></i>
            Survival Leaderboard
          </button>
        </div>

        <div class="system-report-card py-3">
          <div class="card-body">
            <h4 class="text-center text-white pt-4">
              Active players - Click on a player to join his game
            </h4>
            <div class="row">
              <div class="col">
                <ul
                  id="globalClanTaggedPlayers"
                  class="list-unstyled text-center"
                >
                  <!-- Les joueurs seront ajoutés ici via JavaScript -->
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Force Font Preload Workaround -->
    <div class="font-preload">
